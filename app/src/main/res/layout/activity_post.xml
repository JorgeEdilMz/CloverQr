<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF"
    tools:context=".PostActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:id="@+id/bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_added"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="#D3CFCF"
            android:scaleType="centerInside"
            android:src="@mipmap/conocimiento" />

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Nombre y descripción de la planta"
            android:maxLines="5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Selecciona una categoría"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:background="#D3CFCF"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radio_group_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_cactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Cactus"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_button_arboterum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Arboterum"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_button_heliconias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Heliconias"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_button_orquideas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Orquideas"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_button_palmas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Palmas"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radio_button_quiches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Quiches"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#D3CFCF"
                android:gravity="center"
                android:text="PUBLICAR"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>